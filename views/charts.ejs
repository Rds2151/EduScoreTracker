<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Take Test</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <h2 class="mb-4">Take Test</h2>

    <!-- Select Test Dropdown -->
    <div class="form-group">
        <label for="selectTest">Select Test:</label>
        <select class="form-control" id="selectTest" onchange="showQuestionForm()">
            <!-- Options for tests will be dynamically populated -->
            <option value="" disabled selected>Select Test</option>
            <option value="test1">Test 1</option>
            <option value="test2">Test 2</option>
            <!-- Add more options as needed -->
        </select>
    </div>

    <!-- Question Form (Initially Hidden) -->
    <div id="questionForm" style="display: none;">
        <div class="form-group">
            <label for="question">Question:</label>
            <input type="text" class="form-control" id="question" placeholder="Enter the question">
        </div>

        <div class="form-group">
            <label for="options">Options (comma-separated):</label>
            <input type="text" class="form-control" id="options" placeholder="Option 1, Option 2, Option 3, Option 4">
        </div>

        <div class="form-group">
            <label for="correctAnswer">Correct Answer:</label>
            <select class="form-control" id="correctAnswer">
                <!-- Options will be dynamically populated based on the selected test -->
            </select>
        </div>
    </div>
</div>

<!-- Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    function showQuestionForm() {
        var selectTest = document.getElementById('selectTest');
        var questionForm = document.getElementById('questionForm');

        // Show the question form if a test is selected
        if (selectTest.value !== "") {
            questionForm.style.display = 'block';
            // You can dynamically populate the correctAnswer select options based on the selected test here
        } else {
            questionForm.style.display = 'none';
        }
    }
</script>
</body>
</html>
